<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.android.batteryapp.MainActivity">

    <LinearLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="0dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/lapras_icon" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Battery Status: " />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout_plug"
        android:orientation="horizontal"
        android:layout_below="@id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/jolteon_icon"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txtPlug"
            android:text="Power Plug: "
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout_level"
        android:orientation="horizontal"
        android:layout_below="@id/layout_plug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/psyduck_icon"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txtLevel"
            android:text="Battery Level: "
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout_health"
        android:orientation="horizontal"
        android:layout_below="@id/layout_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/chansey_icon"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txtHealth"
            android:text="Battery Health: "
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout_voltage"
        android:orientation="horizontal"
        android:layout_below="@id/layout_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/voltorb_icon"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txtVoltage"
            android:text="Battery Voltage: "
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout_temp"
        android:orientation="horizontal"
        android:layout_below="@id/layout_voltage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/articuno_icon"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txtTemp"
            android:text="Battery Temperature: "
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout_technology"
        android:orientation="horizontal"
        android:layout_below="@id/layout_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/magneton_icon"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txtTech"
            android:text="Battery Technology: "
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
